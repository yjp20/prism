{
  "private": true,
  "name": "prism",
  "license": "Apache-2.0",
  "version": "3.0.0-pre",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/stoplightio/prism.git"
  },
  "scripts": {
    "lint": "tslint -p packages/tsconfig.json",
    "lint.fix": "yarn lint --fix",
    "typecheck": "tsc --build ./packages/tsconfig.json",
    "build": "tsc --build ./packages/tsconfig.build.json",
    "build.watch": "tsc --build --watch ./packages/tsconfig.build.json",
    "posttest": "yarn lint",
    "test": "yarn test.ci",
    "test.ci": "jest --maxWorkers=2",
    "test.coverage": "yarn test --coverage",
    "test.watch": "yarn test --watchAll",
    "test.update": "yarn test.fast --updateSnapshot",
    "release": "lerna version prerelease --conventional-commits --preid alpha"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.22.0",
    "@oclif/tslint": "^3.1.1",
    "@stoplight/types": "^5.1.1",
    "@types/caseless": "^0.12.2",
    "@types/chai": "^4.1.7",
    "@types/chance": "^1.0.4",
    "@types/jest": "^24.0.13",
    "@types/json-schema": "^7.0.3",
    "@types/lodash": "^4.14.132",
    "@types/node": "^12.0.2",
    "@types/signale": "^1.2.1",
    "chance": "^1.0.18",
    "globby": "^9.2.0",
    "jest": "^24.8.0",
    "lerna": "^3.14.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.16.0",
    "tslint-config-stoplight": "^1.3.0",
    "typescript": "^3.4.5"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "publishConfig": {
    "tag": "beta"
  },
  "dependencies": {}
}
