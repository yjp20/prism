{
  "private": true,
  "name": "prism",
  "license": "UNLICENSED",
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "yarn",
    "fmt": "prettier --write \"packages/*/src/**/*.{ts,js}\"",
    "lint": "tslint packages/*/src/**/*.{ts}",
    "build": "tsc --build tsconfig.all.json",
    "build.clean": "find ./packages -name lib -type d -exec rm -rf {} \\;",
    "build.watch": "yarn build.clean && tsc --build --watch tsconfig.all.json",
    "test": "yarn lint && yarn test.fast",
    "pretest.fast": "yarn build",
    "test.fast": "jest --runInBand",
    "test.coverage.clean": "rm -rf coverage",
    "test.coverage": "yarn test.coverage.clean && yarn test --coverage",
    "test.watch": "yarn test --watchAll",
    "test.update": "yarn test.fast --updateSnapshot"
  },
  "devDependencies": {
    "@stoplight/types": "3.x.x",
    "@types/chance": "1.0.x",
    "@types/jest": "23.3.x",
    "@types/node": "10.12.x",
    "ajv": "6.6.x",
    "chance": "1.0.x",
    "jest": "^23.6.x",
    "oclif": "^1.12.x",
    "ts-jest": "23.10.x",
    "tslint": "5.11.x",
    "tslint-config-stoplight": "1.1.x",
    "tslint-eslint-rules": "5.4.x",
    "typescript": "3.1.x"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
