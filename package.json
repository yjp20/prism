{
  "private": true,
  "license": "Apache-2.0",
  "version": "3.0.0",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/stoplightio/prism.git"
  },
  "scripts": {
    "lint": "eslint ./packages/**/src/**/*.ts",
    "lint.fix": "yarn lint --fix",
    "build": "ttsc --build ./packages/tsconfig.build.json",
    "posttest": "yarn lint",
    "test": "jest --maxWorkers=2",
    "test.watch": "yarn test --watchAll",
    "release": "lerna version",
    "prebuild.binary": "yarn build",
    "build.binary": "npx pkg --output ./cli-binaries/prism-cli ./packages/cli/",
    "test.harness": "jest -c ./jest.harness.config.js"
  },
  "devDependencies": {
    "@stoplight/types": "^11.3.0",
    "@types/caseless": "^0.12.2",
    "@types/chance": "^1.0.6",
    "@types/faker": "^4.1.5",
    "@types/jest": "^24.0.18",
    "@types/json-schema": "^7.0.3",
    "@types/lodash": "^4.14.144",
    "@types/node": "^13.1.1",
    "@types/node-fetch": "2.5.4",
    "@types/pino": "^5.8.11",
    "@types/raw-body": "^2.3.0",
    "@types/signale": "^1.2.1",
    "@types/split2": "^2.1.6",
    "@types/type-is": "^1.6.3",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "abstract-logging": "^2.0.0",
    "chance": "^1.1.3",
    "diff-js-xml": "^1.0.5",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "fast-xml-parser": "^3.16.0",
    "gavel": "^9.1.1",
    "glob-fs": "^0.1.7",
    "http-string-parser": "^0.0.6",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "lerna": "^3.17.0",
    "lint-staged": "^10.0.7",
    "lodash": "^4.17.15",
    "nock": "^11.3.3",
    "node-fetch": "^2.6.0",
    "prettier": "^1.18.2",
    "split2": "^3.1.1",
    "tmp": "^0.1.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "ts-transform-import-path-rewrite": "^0.2.1",
    "tsconfig-paths": "^3.8.0",
    "ttypescript": "^1.5.7",
    "type-is": "^1.6.18",
    "typescript": "^3.6.4"
  },
  "lint-staged": {
    "**/packages/**/*.ts": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
