{
  "private": true,
  "license": "Apache-2.0",
  "version": "3.0.0",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/stoplightio/prism.git"
  },
  "scripts": {
    "lint": "eslint ./packages/**/src/*.ts",
    "lint.fix": "yarn lint --fix",
    "build": "ttsc --build ./packages/tsconfig.build.json",
    "posttest": "yarn lint",
    "test": "jest",
    "release": "lerna version",
    "prebuild.binary": "yarn build",
    "build.binary": "npx pkg --output ./cli-binaries/prism-cli ./packages/cli/",
    "test.harness": "jest -c ./jest.harness.config.js"
  },
  "devDependencies": {
    "@stoplight/types": "^11.4.1",
    "@types/caseless": "^0.12.2",
    "@types/chance": "^1.0.6",
    "@types/content-type": "^1.1.3",
    "@types/faker": "^4.1.5",
    "@types/jest": "^26.0.10",
    "@types/json-schema": "^7.0.3",
    "@types/lodash": "^4.14.160",
    "@types/node": "^13.1.1",
    "@types/node-fetch": "2.5.7",
    "@types/openapi-sampler": "^1.0.0",
    "@types/pino": "^6.0.0",
    "@types/postman-collection": "^3.5.5",
    "@types/raw-body": "^2.3.0",
    "@types/signale": "^1.2.1",
    "@types/split2": "^2.1.6",
    "@types/type-is": "^1.6.3",
    "@types/uri-template-lite": "^19.12.0",
    "@types/urijs": "^1.19.10",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^3.9.1",
    "abstract-logging": "^2.0.0",
    "chance": "^1.1.3",
    "diff-js-xml": "^1.0.5",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "fast-xml-parser": "^3.16.0",
    "gavel": "^9.1.5",
    "glob-fs": "^0.1.7",
    "http-string-parser": "^0.0.6",
    "husky": "^4.2.3",
    "jest": "^26.4.2",
    "lerna": "^3.17.0",
    "lint-staged": "^10.0.7",
    "lodash": "^4.17.20",
    "nock": "^13.0.4",
    "node-fetch": "^2.6.0",
    "prettier": "^2.1.0",
    "split2": "^3.2.2",
    "tmp": "^0.2.0",
    "ts-jest": "^26.2.0",
    "ts-node": "^9.0.0",
    "ts-transform-import-path-rewrite": "^0.2.1",
    "tsconfig-paths": "^3.8.0",
    "ttypescript": "^1.5.7",
    "type-is": "^1.6.18",
    "typescript": "^3.9.2"
  },
  "lint-staged": {
    "**/packages/**/*.ts": [
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
